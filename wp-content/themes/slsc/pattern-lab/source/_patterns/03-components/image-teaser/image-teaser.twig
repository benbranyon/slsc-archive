<article class="image-teaser" role="article">
  <div class="l-media">
    {% if image %}
      <div class="l-media__object">
        <a href="{{ url }}">{{ image }}</a>
      </div>
    {% endif %}
    <div class="l-media__content">
      <h2 class="image-teaser__title"><a href="{{ url }}">{{ title }}</a></h2>
      <div class="image-teaser__summary">{{ summary }}</div>
      {% block functions %}
        {# used by WordPress #}
      {% endblock %}
    </div>
  </div>
</article>
