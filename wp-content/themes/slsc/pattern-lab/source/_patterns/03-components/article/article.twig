{%
  set classes = [
    'article',
    custom_classes ? custom_classes,
  ]|join(' ')|trim
%}

<article class="{{ classes }}" role="article">

  {% if has_footer %}
    <footer>
      {% block footer %}
        {{ footer }}
      {% endblock %}
    </footer>
  {% endif %}

  {% block main %}
    {{ content }}
  {% endblock %}
  {% block comments %}
  {% endblock %}
</article>
